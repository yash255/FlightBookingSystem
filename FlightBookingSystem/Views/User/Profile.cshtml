@model FlightBookingSystem.Models.User

@{
    ViewBag.Title = "Profile";
}

<h2>@Model.Email</h2>

<p>First Name: @Model.FirstName</p>
<p>Last Name: @Model.LastName</p>

<h3>Bookings</h3>
@if (ViewBag.Bookings.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>From</th>
                <th>To</th>
                <th>Departure Date</th>
                <th>Passengers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in ViewBag.Bookings)
            {
                <tr>
                    <td>@booking.FlightNumber</td>
                    <td>@booking.From</td>
                    <td>@booking.To</td>
                    <td>@booking.DepartureDate</td>
                    <td>@booking.Passengers</td>
                    <td>
                        @Html.ActionLink("Cancel", "CancelBooking", new { id = booking.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no bookings.</p>
}
